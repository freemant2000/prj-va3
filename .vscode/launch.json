    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask (Test)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "vocabassistant3/web_flask/va3_web_main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "-p 8000"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Flask (Production)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "vocabassistant3/web_flask/va3_web_main.py",
                "FLASK_DEBUG": "1",
                "va3_cfg": "va3-cfg-prod-home.ini"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "-p 8000"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Run Test",
            "type": "python",
            "request": "launch",
            "module": "run_test",
            "justMyCode": true
        },
        {
            "name": "TUI (Test)",
            "type": "python",
            "request": "launch",
            "module": "vocabassistant3.tui.main_tui"
        },
        {
            "name": "TUI (Production)",
            "type": "python",
            "request": "launch",
            "module": "vocabassistant3.tui.main_tui",
            "env": {"va3_cfg": "va3-cfg-prod-home.ini"}
        },
        {
            "name": "Web (Test)",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "module": "vocabassistant3.web.va3_web_main"
        }
    ]
}